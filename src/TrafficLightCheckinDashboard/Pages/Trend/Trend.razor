@page "/Trend"

@foreach (var lookbackOption in lookbackOptions)
{
	<div class="form-check form-check-inline">
		<input class="form-check-input" type="radio" name="inlineRadioOptions" value="@lookbackOption"
		   checked="@(lookbackPeriod == lookbackOption)"
		   @onchange="@(() => { lookbackPeriod = lookbackOption; })">
		<label class="form-check-label" for="weekLookback">@lookbackOption day lookback</label>
	</div>
}

<TrendGrid lookbackPeriod="@lookbackPeriod" />

@code {
	public int[] lookbackOptions = new int[] { 7, 30, 365 };

	public int lookbackPeriod { get; set; } = 7;
}
